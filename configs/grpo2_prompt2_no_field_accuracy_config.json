{
  "deepspeed": "scripts/zero2.json",
  "use_liger_loss": true,
  "lora_enable": true,
  "data_path": "/path/to/grpo2_prompt2.json",
  "image_folder": "/path/to/images",
  "reward_module": "src.train.reward_funcs_prompt2_no_field_accuracy",
  "remove_unused_columns": false,
  "freeze_vision_tower": true,
  "freeze_llm": true,
  "freeze_merger": false,
  "bf16": false,
  "fp16": true,
  "disable_flash_attn2": false,
  "output_dir": "output/grpo2_prompt2_no_field_accuracy",
  "num_train_epochs": 1,
  "beta": 0.1,
  "num_generations": 4,
  "per_device_train_batch_size": 8,
  "gradient_accumulation_steps": 1,
  "max_completion_length": 768,
  "max_prompt_length": 512,
  "image_min_pixels": 100352,
  "image_max_pixels": 200704,
  "learning_rate": 1e-5,
  "weight_decay": 0.1,
  "warmup_ratio": 0.05,
  "lr_scheduler_type": "cosine",
  "logging_steps": 20,
  "gradient_checkpointing": false,
  "report_to": "tensorboard",
  "lazy_preprocess": true,
  "save_strategy": "steps",
  "save_steps": 100,
  "save_total_limit": 10,
  "dataloader_num_workers": 4,
  "lora_rank": 8,
  "lora_alpha": 32
}

